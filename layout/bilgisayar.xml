<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bilgisayar"
    android:background="@color/colorBackground">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/img1"
                android:src="@drawable/img1"
                android:scaleType="center"/>


            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Anasayfa"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginRight="180dp"
                android:layout_marginLeft="90dp"
                android:onClick="donus2"/>
            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bilgisayarlar"
                android:layout_gravity="center"
                android:layout_marginTop="-50dp"
                android:layout_marginRight="80dp"
                android:layout_marginLeft="180dp"

                />
            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Ekipmanlar"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginRight="180dp"
                android:layout_marginLeft="90dp"
                android:onClick="donus4"
                />
            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hakkımızda"
                android:layout_gravity="center"
                android:layout_marginTop="-49dp"
                android:layout_marginRight="80dp"
                android:layout_marginLeft="180dp"
                android:onClick="donus3"
                />
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/img15"
                android:src="@drawable/img15"
                android:layout_gravity="left"
                android:layout_marginTop="30dp"
                android:layout_marginRight="270dp"
                />
            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Small Kasa"
                android:layout_gravity="center"
                android:layout_marginTop="-120dp"
                android:layout_marginRight="80dp"
                android:layout_marginLeft="170dp"
                android:onClick="donus5"

                />
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="80dp"
                android:background="@color/black"/>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/img16"
                android:src="@drawable/img16"
                android:layout_gravity="right"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="270dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="40dp"
                android:background="@color/black"/>

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medium Kasa"
                android:layout_gravity="center"
                android:layout_marginTop="-150dp"
                android:layout_marginRight="170dp"
                android:layout_marginLeft="80dp"
                android:onClick="donus6"
                />
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/img17"
                android:src="@drawable/img17"
                android:layout_gravity="center"
                android:layout_marginTop="140dp"
                />
            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Large Kasa"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginRight="120dp"
                android:layout_marginLeft="120dp"
                android:onClick="donus40"
                />



        </LinearLayout>
    </ScrollView>
</FrameLayout>