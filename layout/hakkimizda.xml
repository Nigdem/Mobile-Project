<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hakkimizda"
    android:background="@color/colorBackground">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/img1"
        android:src="@drawable/img1"
        android:scaleType="center"/>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Anasayfa"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginRight="180dp"
        android:layout_marginLeft="90dp"
        android:onClick="donus"/>
    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bilgisayarlar"
        android:layout_gravity="center"
        android:layout_marginTop="-50dp"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="180dp"
        android:onClick="adresgecis1"
        />
    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Ekipmanlar"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:layout_marginRight="180dp"
        android:layout_marginLeft="90dp"
        android:onClick="adresgecis2"
        />
    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hakkımızda"
        android:layout_gravity="center"
        android:layout_marginTop="-50dp"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="180dp"
        />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/img8"
                android:src="@drawable/img8"
                android:layout_marginTop="-20dp"
                android:layout_gravity="bottom" />

            <TextView
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="-90dp"

                android:text="HAKKIMIZDA" />


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" KURULUŞ"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="160dp"
                android:layout_gravity="bottom"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="- 2020 yılında en yeni iletişim ve bilgisayar teknolojilerini kullanarak müşterilerine dünya standartlarında çözümler sunmak ilkesiyle yola çıktık. "
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/black"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="AMACIMIZ"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="160dp"
                android:layout_gravity="bottom"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="- UcuzSayar olarak ilke ve prensiplerimiz ekonomik ve yükske kalite ürünler sunmaktır. "
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="bottom"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/black"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="HEDEFİMİZ"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="160dp"
                android:layout_gravity="bottom"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="- Türkiye'de en büyük bilgisayar firmalarından biri olup daima satış rekorları kırmak ve tüketicilerimize yüksek kalitede ürünler sunmak. "
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="bottom"/>

        </LinearLayout>
    </ScrollView>


</FrameLayout>