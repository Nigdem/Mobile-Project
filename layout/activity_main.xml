<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/img1"
        android:src="@drawable/img1"
        android:scaleType="center"/>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Anasayfa"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginRight="90dp"
        android:layout_marginLeft="90dp" />
    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bilgisayarlar"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:layout_marginRight="90dp"
        android:layout_marginLeft="90dp"
        android:onClick="bilgisayar"
        />
    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Ekipmanlar"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:layout_marginRight="90dp"
        android:layout_marginLeft="90dp"
        android:onClick="ekipman"
        />
    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hakkımızda"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:layout_marginRight="90dp"
        android:layout_marginLeft="90dp"
        android:onClick="adresgecis"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/img2"
                android:src="@drawable/img2"
                android:layout_marginTop="-50dp"
                android:layout_gravity="center"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/img4"
                android:src="@drawable/img4"
                android:layout_gravity="center"
                android:layout_marginTop="-50dp"
                android:layout_marginRight="130dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/img6"
                android:src="@drawable/img6"
                android:layout_gravity="center"
                android:layout_marginTop="-70dp"
                android:layout_marginLeft="0dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/img5"
                android:src="@drawable/img5"
                android:layout_gravity="center"
                android:layout_marginTop="-80dp"
                android:layout_marginLeft="120dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Razer Klavye"
                android:layout_marginTop="30dp"
                android:layout_marginRight="130dp"
                android:layout_gravity="center" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Razer Mouse"
                android:layout_marginRight="20dp"
                android:layout_marginTop="-45dp"
                android:layout_gravity="center"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Razer Kulaklık"
                android:layout_marginLeft="130dp"
                android:layout_gravity="center"
                android:layout_marginTop="-45dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="400TL"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="bottom"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="250TL"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="-45dp"
                android:layout_gravity="center"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="350TL"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="-45dp"
                android:layout_gravity="center"/>
        </LinearLayout>
    </ScrollView>


</FrameLayout>