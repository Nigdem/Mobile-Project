<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ekipman"
    android:background="@color/colorBackground">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/img1"
        android:src="@drawable/img1"
        android:scaleType="center"/>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Anasayfa"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginRight="180dp"
        android:layout_marginLeft="90dp"
        android:onClick="donus7"/>
    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bilgisayarlar"
        android:layout_gravity="center"
        android:layout_marginTop="-50dp"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="180dp"
        android:onClick="donus8"
        />
    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Ekipmanlar"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:layout_marginRight="180dp"
        android:layout_marginLeft="90dp"
        />
    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hakkımızda"
        android:layout_gravity="center"
        android:layout_marginTop="-50dp"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="180dp"
        android:onClick="donus9"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/img10"
        android:src="@drawable/img10"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Monitör"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        android:backgroundTint="@color/butonBackground"
        android:onClick="adresgecis9"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/black"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/img11"
        android:src="@drawable/img11"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
       />

    <Button
        android:id="@+id/button6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kulaklık"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        android:backgroundTint="@color/kulaklıkbackground"
        android:onClick="adresgecis10"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/black"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/img12"
        android:src="@drawable/img12"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
       />

    <Button
        android:id="@+id/button7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mouse"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        android:backgroundTint="@color/mousebackground"
        android:onClick="adresgecis11"
         />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/black"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/img13"
        android:src="@drawable/img13"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
       />

    <Button
        android:id="@+id/button8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Klavye"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        android:backgroundTint="@color/klavyebackground"
        android:onClick="adresgecis12"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>